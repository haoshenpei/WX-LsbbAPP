.logo {
    display: flex;
    height: 472rpx;
    align-items:center;
    justify-content: center;
}
.icon-ziyuan {
    font-size: 150rpx;
    color: #05af10;
}
.center-box {
    width: 623rpx;
    height: 347rpx;
    background-color: #ffffff;
	box-shadow: 0px 8rpx 65rpx 0px 
		rgba(4, 0, 1, 0.15);
	border-radius: 10rpx;
    margin: 0 auto;
}
.center-box .title {
    height: 274rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: #333333;
}
.btn-class-box {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.btn-class-box button {
    line-height: initial;
    font-size: 34rpx;
    color: #577eff;
    margin: 0;
    position: absolute;
    opacity: 0;  
}
.btn-class-box text {
    font-size: 34rpx;
    color: #577eff;
    margin-right: 50rpx; 
}
.btn-class-box text:first-child {
    color: #999999;
}